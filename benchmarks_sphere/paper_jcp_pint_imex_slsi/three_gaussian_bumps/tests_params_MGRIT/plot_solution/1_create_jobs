#!/bin/bash

../benchmarks_create.py 1

## create link to already computed reference solution
ref_job=$(basename $(ls -d ../tests_convergence/job_benchref*))
ref_job_local=$(ls -d job_benchref*)

if [ $ref_job == $ref_job_local ]; then
	rm -r $ref_job_local
	ln -s ../tests_convergence/$ref_job .
else
	echo "Wrong ref job name"
	echo $ref_job
	echo $ref_job_local
	exit 1
fi
